<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
						http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
						http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

	<changeSet id="20251112_091900_create_table_customer"
		author="masud.habib@centricsoftware.com">
		<createTable tableName="customers">
			<column name="id" type="bigint" autoIncrement="true" startWith="101">
				<constraints primaryKey="true" />
			</column>
			<column name="first_name" type="varchar(50)" />
			<column name="last_name" type="varchar(50)" />
			<column name="greet_name" type="varchar(50)" />
			<column name="created_date" type="TIMESTAMP WITH TIME ZONE" />
			<column name="updated_date" type="TIMESTAMP WITH TIME ZONE" />
		</createTable>
	</changeSet>
</databaseChangeLog>